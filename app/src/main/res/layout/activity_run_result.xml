            android:text="1,24 km"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/collected"/>

        <TextView
            android:layout_width="wrap_content"
